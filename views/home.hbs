{{!-- CONTACT SECTION --}}
<section id="contactSection">
    <h2 class="hidden">Contact Me</h2>
    <img src="images/contact_title.png" id="contactTitle" class="title" alt="Contact Me Title">

    <div id="contactForm">
        <!-- Name -->
        <label for="firstName" class="hidden">Name</label>
        <div id="contactNameInput">
            <input id="firstName" type="text" placeholder="First Name" required>
            <input id="lastName" type="text" placeholder="Last Name" required>
        </div> <!-- End contactName -->

		<!-- Email -->
		<label for="email" class="hidden">Email</label>
		<input id="email" type="Email" placeholder="example@website.com" required>

        <!-- Subject -->
		<label for="subject" class="hidden">Subject</label>
		<input id="subject" type="text" placeholder="Let's work together!" required>

		<!-- Message -->
		<label for="message" class="hidden">Message</label>
		<textarea id="message" cols="50" rows="14" placeholder="Write your message here!" required></textarea>

		<!-- Submit Button -->
		<input class="submit" type="submit" value="Submit">
	</div> <!-- End contactForm -->
</section> <!-- End contactSection -->

